---
export interface Props {
  text?: string;
  href?: string;
  variant?: "primary" | "secondary" | "outline";
  size?: "small" | "medium" | "large";
}

const {
  text = "Book Now",
  href = "/contact",
  variant = "primary",
  size = "medium",
} = Astro.props;
---

<a href={href} class={`booking-btn ${variant} ${size}`}>
  {text}
</a>

<style>
  .booking-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    font-weight: 600;
    border-radius: 50px;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
    position: relative;
    overflow: hidden;
  }

  .booking-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: left 0.5s;
  }

  .booking-btn:hover::before {
    left: 100%;
  }

  /* Variants */
  .booking-btn.primary {
    background: var(--accent);
    color: var(--white);
  }

  .booking-btn.primary:hover {
    background: var(--accent-dark);
    color: var(--white);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 128, 128, 0.3);
  }

  .booking-btn.secondary {
    background: var(--primary);
    color: var(--white);
  }

  .booking-btn.secondary:hover {
    background: var(--primary-dark);
    color: var(--white);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(143, 188, 143, 0.3);
  }

  .booking-btn.outline {
    background: transparent;
    color: var(--accent);
    border: 2px solid var(--accent);
  }

  .booking-btn.outline:hover {
    background: var(--accent);
    color: var(--white);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 128, 128, 0.2);
  }

  /* Sizes */
  .booking-btn.small {
    padding: 0.6rem 1.5rem;
    font-size: 0.9rem;
  }

  .booking-btn.medium {
    padding: 0.8rem 2rem;
    font-size: 1rem;
  }

  .booking-btn.large {
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .booking-btn.small {
      padding: 0.5rem 1.2rem;
      font-size: 0.8rem;
    }

    .booking-btn.medium {
      padding: 0.7rem 1.5rem;
      font-size: 0.9rem;
    }

    .booking-btn.large {
      padding: 0.9rem 2rem;
      font-size: 1rem;
    }
  }
</style>
