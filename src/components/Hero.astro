---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  buttons?: {
    text: string;
    href?: string;
    variant?: "primary" | "secondary" | "outline";
    size?: "small" | "medium" | "large";
  }[];
}

const { title, subtitle = "", description = "", buttons = [] } = Astro.props;
---

<section class="hero">
  <div class="container">
    <h1>{title}</h1>
    {subtitle && <p class="hero-subtitle">{subtitle}</p>}
    {description && <p>{description}</p>}
    {buttons.length > 0 && (
      <div class="hero-buttons">
        {buttons.map((button) => (
          <a
            href={button.href || "#"}
            class={`btn ${button.variant === "outline" ? "btn-outline" : ""} ${
              button.variant === "secondary" ? "btn-secondary" : ""
            }`}
          >
            {button.text}
          </a>
        ))}
      </div>
    )}
  </div>
</section>

<style>
  .hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 2rem;
  }

  .hero-subtitle {
    font-size: 1.1em;
    font-weight: 600;
    color: var(--accent);
    margin-top: 0.5rem;
    margin-bottom: 1.5rem;
    padding: 0.5rem 1.5rem;
    background: rgba(30, 64, 175, 0.1);
    display: inline-block;
    border-radius: 50px;
  }

  @media (max-width: 768px) {
    .hero-buttons {
      flex-direction: column;
      align-items: center;
    }

    .hero-buttons .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
